{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [2, "ignorePackages"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".mjs", ".js"]
      }
    }
  }
}
